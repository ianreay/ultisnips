snippet li "log info" !b
logger.info("${1:msg}")
endsnippet

snippet li "log debug" !b
logger.debug("${1:msg}")
endsnippet

snippet if "if" !b
if
	${1:content}
end
endsnippet

snippet ife "ife" !b
if
	${1:content}
else
	${2:content}
end
endsnippet

snippet ifee "if elsif else" !b
if
	${1:content}
elsif
	${2:content}
else
	${3:content}
end
endsnippet

snippet each "each" !b
${1}.each do |${2:obj}|
  ${3:content}
end
endsnippet

