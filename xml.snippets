snippet sp "stored procedure" !b
<function name="${1:name}" commit="${2:false}">
	<description>
		${3:description}
	</description>
	<inputs>
		<parameter type="${4:type}" name="${5:name}"/>
	</inputs>
	<outputs dimension="${6:scalar}">
		<parameter type="${7:boolean}" name="${8:name}"/>
	</outputs>
	<sql>
		${9:sql}
	</sql>
</function>
endsnippet
