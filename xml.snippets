snippet doc "Doc boiler plate" !b
<?xml version="1.0" encoding="utf-8"?>

<!DOCTYPE design-document [
<!ENTITY test-cases SYSTEM "test-cases.xml">
]>

<design-document 
  date="${1:---}" 
  title="${2:title}" 
  location=""
  status="${3:Incomplete}"
  priority="${4:High}"
  designdate="???"
  codecompdate="2012-??-??"
  targetdate="2012-??-??"
  deveffort="??? hours"
  qaeffort="?? hours"
  sources="Many projects"
  assigned="developer1,qa1"
  tickets="???">

	<intro>
		A few paragraphs
	</intro>

	<rationale>
		A few paragarphs
	</rationale>

	<use-cases>
		<use-case name="tmp" label="tmp">
		content
		</use-case>
	</use-cases>

	<definitions>
		<definition world="tmp" label="tmp">
		content
		</definition>
	</definitions>

	<requirements>
    <reqgroup name="tmp">
      <requirement priority="E" label="tmp">
			content
      </requirement>
		</reqgroup>
	</requirements>

	<design>
    <section name="tmp" label="tmp">
		content
    </section>
	</design>

	<questions>
    <qa>
      <question>
        question
      </question>
      <answer>
        answer
      </answer>
    </qa>
	</questions>

	<future>
    <section name="Future items" label="design_future_items">
      future items
    </section>
	</future>

	<estimate>
    <task dev="0" qa="0">description</task>
	</estimate>
</design-document>
endsnippet

